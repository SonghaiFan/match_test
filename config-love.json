      ],
      "startButton": "开始"
    },
    "navigation": {
      "nextButton": "下一题",
      "prevButton": "上一题"
    },
    "results": {
      "title": "测试结果",
      "subtitle": "以下是你的答案",
      "exportButton": "保存我的答案",
      "restartButton": "重新开始"
    }
  },
  "theme": {
    "categories": {
      "价值底色": {
        "name": "价值底色",
        "color": "#1565c0",
        "description": "你的核心价值观和人生态度"
      },
      "人生规划": {
        "name": "人生规划",
        "color": "#2e7d32",
        "description": "你对未来的规划和目标设定"
      },
      "金钱观": {
        "name": "金钱观",
        "color": "#ef6c00",
        "description": "你对金钱的态度和消费观念"
      },
      "家庭观": {
        "name": "家庭观",
        "color": "#7b1fa2",
        "description": "你对家庭关系和责任的看法"
      },
      "感情观": {
        "name": "感情观",
        "color": "#c2185b",
